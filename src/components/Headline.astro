---
import type { HTMLAttributes } from 'astro/types';

export interface Props extends HTMLAttributes<'span'>{
  level?: '1' | '2' | '3' | '4' | '5' | '6',
  style?: 'h1' | 'h2' | 'h3' | 'h4' | 'h5' | 'h6' | 'span',
}

const { level, style, class: className, ...attr } = Astro.props
const Headline = level ? `h${level}` : 'span'
const styleClass = style ? style : Headline
---
<style>
  .Headline {
    display: block;
    position: relative;
    margin: 0;
    color: var(--on-background__high-emphasis);
    &.h1 {
      font: var(--typestyle__h1);
      margin-bottom: 32px;
      @media (--min-desktop) {
        margin-bottom: 40px;
      }
    }
    &.h2 {
      font: var(--typestyle__h2);
      margin-bottom: 24px;
      @media (--min-desktop) {
        margin-bottom: 32px;
      }
    }
    &.h3 {
      font: var(--typestyle__h4);
      margin-bottom: 24px;
    }
    &.h4 {
      font: var(--typestyle__h4);
      margin-bottom: 16px;
    }
    &.h5 {
      font: var(--typestyle__h5);
      margin-bottom: 8px;
    }
    &.h6 {
      font: var(--typestyle__h6);
      text-transform: uppercase;
      color: var(--on-background__medium-emphasis);
      margin-bottom: 8px;
    }
  }
</style>

<Headline class:list={['Headline', className, styleClass]} {...attr}>
  <slot />
</Headline>