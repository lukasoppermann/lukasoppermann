---
import { importSvg } from '@src/utilities/importSvg';
import type { HTMLAttributes } from 'astro/types'

type IconTypes = 
  'arrowRight' |
  'close' |
  'menu' |
  'mail' |
  'fileDownload'

export interface Props extends HTMLAttributes<'svg'> {
	type: IconTypes;
}

const { type } = Astro.props;

const { attributes: svgAttributes, innerHTML } = await importSvg(`../assets/svgs/icon-${type}.svg?raw`);
---
<style>
  svg {
    fill: var(--on-background__high-emphasis) !important;
  }
</style>

<svg {...svgAttributes} set:html={innerHTML}></svg>