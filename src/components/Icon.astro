---
import Svg from './Svg.astro';
import menu from '../assets/svgs/icon-menu.svg?raw';
import arrowRight from '../assets/svgs/icon-arrowRight.svg?raw';
import mail from '../assets/svgs/icon-mail.svg?raw';
import close from '../assets/svgs/icon-close.svg?raw';
import fileDownload from '../assets/svgs/icon-fileDownload.svg?raw';

export type IconTypes = 'arrowRight' | 'close' | 'menu' | 'mail' | 'fileDownload'


export type Props = {
  type?: IconTypes;
  svgString?: string;
  class?: string;
  inverted?: boolean;
}

const iconStrings = {
  menu,
  arrowRight,
  mail,
  close,
  fileDownload,
}

let { type = undefined, svgString = undefined, inverted = undefined, class: className, ...attr } = Astro.props;
if(type) {
  svgString = iconStrings[type as IconTypes]
}

---

<Svg svgString={svgString as string} class:list={["icon", className, `${inverted ? 'isInverted' : ""}`]} {...attr} />