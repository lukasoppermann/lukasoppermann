---
import type { IconTypes } from '@src/types/IconTypes';
import Svg from './Svg.astro';
import menu from '@svgs/icon-menu.svg?raw';
import arrowRight from '@svgs/icon-arrowRight.svg?raw';
import mail from '@svgs/icon-mail.svg?raw';
import close from '@svgs/icon-close.svg?raw';
import fileDownload from '@svgs/icon-fileDownload.svg?raw';

type Props = {
  type: IconTypes;
  svgString?: undefined;
} | { 
  type: undefined;
  svgString?: string; 
}

const iconStrings = {
  menu,
  arrowRight,
  mail,
  close,
  fileDownload,
}

let { type = undefined, svgString = undefined, ...attr } = Astro.props;

if(type) {
  svgString = iconStrings[type as IconTypes]
}

---
<style>
  svg {
    fill: var(--on-background__high-emphasis) !important;
  }
</style>

<Svg svgString={svgString as string} class="icon" {...attr}/>