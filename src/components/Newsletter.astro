---
import type { HTMLAttributes } from 'astro/types';
import Headline from "./Headline.astro";
import Link from "./Link.astro";
import Paragraph from "./Paragraph.astro";

interface Props extends HTMLAttributes<'div'>{}


const { class: className, ...attr } = Astro.props;

---

<style>
.Container {
  margin-bottom: 96px;
  & .title {
    position: relative;
    grid-column: columns;
    @media (--min-tablet) {
      grid-row: 1;
      grid-column: column 1 / span 4;
    }
    @media (--min-desktop) {
      grid-column: column 1 / span 2;
    }
    & > :first-child {
      margin-bottom: 0;
    }
    &::before {
      position: absolute;
      content: "";
      width: 2px;
      height: 52px;
      background-color: var(--accent);
      top: 0;
      left: -12px;
    }
  }
  & .medium-link {
    grid-row: 4;
    grid-column: columns;
    justify-self: self-start;
    align-self: start;
    @media (--min-tablet) {
      grid-row: 2;
      grid-column: columns / span 5;
    }
    @media (--min-desktop) {
      grid-column: columns / span 2;
    }
  }
  & .description {
    margin-top: 0;
    margin-bottom: 16px;
    grid-column: columns;
    @media (--min-tablet) {
      grid-column: column 5 / span 8;
    }
    @media (--min-desktop) {
      grid-column: column 3 / span 6;
    }
  }
}
</style>

<div class:list={['Grid Container', className]} {...attr}>
  <div class="title">
    <Headline level="4" style="h5">Newsletter</Headline>
    <Headline style="h4">Stay in the loop</Headline>
  </div>
  <Link class="medium-link" style="ghost" icon href="https://lukasoppermann.medium.com/subscribe" target="_blank">Subscribe</Link>
  <Paragraph class="description" type="small">Subscribe to my medium page to be the first to know about new articles I publish. <br />I write about design with a focus on design systems and tokens.</Paragraph>
</div>