---
import Layout from '@layouts/Layout.astro';
import Intro from '@src/components/home/Intro.astro';
import Resume from '@src/components/home/Resume.astro';
import HomepageLink from '@src/components/home/HomepageLink.astro';
import Project from '@src/components/home/Project.astro';
import { homepageLinks } from '@src/data/homepageLinks';

const projects = await Astro.glob('../pages/projects/*.md');
---
<style>

</style>

<Layout title="Welcome to Astro.">
  <Intro />
  <Resume />
  {projects.map(project => <Project frontmatter={project.frontmatter} content={project.compiledContent()}/>)}
  {homepageLinks.map(link => <HomepageLink {...link}/>)}
</Layout>


