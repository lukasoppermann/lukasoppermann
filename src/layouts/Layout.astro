---

import Header from '../components/Header.astro'
import '../assets/styles/global.css'
import "@fontsource/source-sans-pro"
import Footer from '../components/Footer.astro';
import Analytics from '@vercel/analytics/astro'

export interface Props {
  title?: string
  description?: string;
  className?: string;
}

const defaults = {
  title:"Lukas Oppermann â€” Lead UI/UX, Design Systems &amp; Creative Technologist",
  description: "Lukas Oppermann is a design lead and creative director from berlin, germany. He loves creating experiences with a focus on usability."
}
const { title, description, className } = Astro.props;

---

<html lang='en'>
  <head>
    <title>{title || defaults.title}</title>
    <meta name="viewport" content="width=device-width,initial-scale=1.0">
    <meta property="og:title" content={`${title || defaults.title}`} />
    <meta name="description" content={description || defaults.description} >
    <meta charset="UTF-8">
    <link rel="icon" href="/favicon.ico" sizes="48x48" />
    <link rel="icon" type="image/svg+xml" sizes="any" href="/favicon.svg" />

    <meta name="color-scheme" content="light dark" />
  </head>
  <body>
    <Header></Header>
    <main class:list={["Grid", className]}>
      <slot />
    </main>
    <Footer />
    <Analytics />
  </body>
</html>