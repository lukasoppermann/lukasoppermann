{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "types": ["astro/client"],
    "baseUrl": ".",
    "paths": {
      "@src/*": ["src/*"],
      "@config/*": ["src/config/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/assets/styles/*"],
      "@svgs/*": ["src/assets/svgs/*"],
    }
  }
}
